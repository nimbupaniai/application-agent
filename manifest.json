{
  "manifest_version": 3,
  "name": "HTML/CSS Scraper",
  "version": "1.0",
  "description": "A Chrome extension to scrape HTML and CSS from websites",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
